// on both server and client side
pnpm init

"type": "module",
  "scripts": {
    "dev": "node --harmony ./server.js --watch"
  },

pnpm add grpc @grpc/proto-loader
pnpm install --save @grpc/proto-loader@latest

npm run protoc

"scripts": {
    "protoc": "grpc_tools_node_protoc --js_out=import_style=commonjs,binary:../generated --grpc_out=./generated --plugin=protoc-gen-grpc=`which grpc_tools_node_protoc_plugin` -I ../proto ../*.proto"
}


