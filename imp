pnpm install grpc protobufjs
pnpm install grpc
pnpm install grpc-tools
pnpm add grpc @grpc/proto-loader

npx grpc_tools_node_protoc --js_out=import_style=commonjs,binary:. --grpc_out=. --plugin=protoc-gen-grpc=`which grpc_tools_node_protoc_plugin` your_proto_file.proto
